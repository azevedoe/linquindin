<form action="/project/create" method="POST" enctype="multipart/form-data">
    <div class="space-y-8">
        <div class="border-b border-gray-900/10 pb-8">
            <p class="mt-1 text-sm text-gray-600">
                Edite as informações do projeto, seus desenvolvedores e palavras-chave.
            </p>
            <div class="mt-8 grid grid-cols-1 gap-4 sm:grid-cols-6">
                <div class="sm:col-span-6">
                    <div id="preview-photo" class="size-12"></div>
                </div>
                <div class="sm:col-span-6">
                    <label for="photo" class="block text-sm font-medium text-gray-900">Foto do Projeto</label>
                    <div class="mt-2">
                        <input type="file" name="photo" id="photo" value="{{project.title}}" required
                            placeholder="Foto do projeto"
                            class="block w-auto rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm">
                    </div>
                </div>
                <div class="sm:col-span-6">
                    <label for="title" class="block text-sm font-medium text-gray-900">Título do Projeto</label>
                    <div class="mt-2">
                        <input type="text" name="title" id="title" value="{{project.title}}" required
                            placeholder="Título do projeto"
                            class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm">
                    </div>
                </div>
                <div class="sm:col-span-6">
                    <label for="link" class="block text-sm font-medium text-gray-900">Link</label>
                    <div class="mt-2">
                        <input type="url" name="link" id="link" value="{{project.link}}" required
                            placeholder="Link do projeto"
                            class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm">
                    </div>
                </div>

                <div class="col-span-full">
                    <label for="subtitle" class="block text-sm font-medium text-gray-900">Breve Resumo</label>
                    <div class="mt-2">
                        <textarea name="subtitle" id="subtitle" rows="3"
                            class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm">{{project.subtitle}}</textarea>
                    </div>
                </div>
                <div class="col-span-full">
                    <label for="chips-input" class="block text-sm font-medium text-gray-900">Palavras-chave</label>
                    <div id="chip-container"
                        class="flex flex-wrap items-center gap-2 mt-2 p-2 bg-white border rounded-lg focus-within:ring-2 focus-within:ring-indigo-500 focus-within:border-indigo-500">
                        <!-- chips vão aparecer aqui -->
                        <input id="chips-input" type="text"
                            class="flex-1 border-none focus:outline-none text-sm text-gray-700 placeholder-gray-400"
                            placeholder="Digite e pressione Enter" />
                    </div>
                </div>
                <!-- inputs ocultos para desenvolvedores e palavras-chave -->
                <input type="hidden" name="developers" id="hidden-developers">
                <input type="hidden" name="keywords" id="hidden-keywords">
            </div>
        </div>

        <div class="border-b border-gray-900/10 pb-8">
            <h2 class="text-base font-semibold text-gray-900">Desenvolvedores</h2>
            <div class="relative mt-2">
                <div class="flex items-center gap-4 mt-4">
                    <div class="relative w-full">
                        <button type="button"
                            class="grid w-full cursor-default grid-cols-1 rounded-md bg-white py-1.5 pl-3 pr-2 text-left text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6"
                            aria-haspopup="listbox" aria-expanded="true" aria-labelledby="listbox-label">
                            <span class="col-start-1 row-start-1 flex items-center gap-3 pr-6">
                                <img src="/images/32x32.png" alt="" class="size-5 shrink-0 rounded-full object-cover">
                                <span class="block truncate">Selecione uma opção</span>
                            </span>
                            <svg class="col-start-1 row-start-1 size-5 self-center justify-self-end text-gray-500 sm:size-4"
                                viewBox="0 0 16 16" fill="currentColor" aria-hidden="true" data-slot="icon">
                                <path fill-rule="evenodd"
                                    d="M5.22 10.22a.75.75 0 0 1 1.06 0L8 11.94l1.72-1.72a.75.75 0 1 1 1.06 1.06l-2.25 2.25a.75.75 0 0 1-1.06 0l-2.25-2.25a.75.75 0 0 1 0-1.06ZM10.78 5.78a.75.75 0 0 1-1.06 0L8 4.06 6.28 5.78a.75.75 0 0 1-1.06-1.06l2.25-2.25a.75.75 0 0 1 1.06 0l2.25 2.25a.75.75 0 0 1 0 1.06Z"
                                    clip-rule="evenodd" />
                            </svg>
                        </button>
                    </div>
                    <button id="add-developer" type="button"
                        class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                        Adicionar
                    </button>
                </div>
                <ul class="hidden absolute z-10 mt-1 max-h-56 w-full overflow-auto rounded-md bg-white py-1 text-base shadow-lg ring-1 ring-black/5 focus:outline-none sm:text-sm"
                    tabindex="-1" role="listbox" aria-labelledby="listbox-label"
                    aria-activedescendant="listbox-option-3">

                    {{#each users}}
                    <li class="relative cursor-default select-none py-2 pl-3 pr-9 text-gray-900" id="listbox-option-0"
                        role="option" data-id="{{ this._id }}">
                        <div class="flex items-center">
                            {{#if this.avatar }}
                                <img loading="lazy" src="{{ this.avatar }}" alt="" class="size-5 shrink-0 rounded-full object-cover">
                            {{else }}
                                <img loading="lazy" src="/images/32x32.png" alt="" class="size-5 shrink-0 rounded-full object-cover">
                            {{/if }}
                            <span class="ml-3 block truncate font-normal">{{ this.name }}</span>
                        </div>
                    </li>
                    {{/each}}
                </ul>
            </div>

            <div id="developer-list"
                class="mt-6 grid grid-cols-1 gap-x-6 gap-y-4 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8 text-[0.8125rem]/5 text-slate-900 ">
                <!-- Developers will be added dynamically here -->
            </div>
        </div>

        <div class="mt-6 flex items-center justify-end gap-x-6">
            <a href="/projects" class="text-sm font-semibold text-gray-900">Cancelar</a>
            <button type="submit"
                class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Salvar</button>
        </div>
    </div>
</form>

<script>
    const chipContainer = document.getElementById('chip-container');
    const chipsInput = document.getElementById('chips-input');
    const keywordsField = document.getElementById('hidden-keywords');

    function createChip(text) {
        const chip = document.createElement('div');
        chip.className = 'flex items-center bg-indigo-100 text-indigo-800 text-sm font-medium px-2 py-1 rounded-full';
        chip.innerHTML = `
                        <span>${text}</span>
                        <button 
                        class="ml-1 text-indigo-500 hover:text-indigo-800 focus:outline-none"
                        aria-label="Remover chip">&times;</button>
                    `;

        chip.querySelector('button').addEventListener('click', () => {
            chipContainer.removeChild(chip);
            updateKeywordsField();
        });

        return chip;
    }

    function chipExists(text) {
        return Array.from(chipContainer.querySelectorAll('span'))
            .some(span => span.textContent.trim().toLowerCase() === text.toLowerCase());
    }

    function updateKeywordsField() {
        const keywords = Array.from(chipContainer.querySelectorAll('span'))
            .map(span => span.textContent.trim());
        keywordsField.value = JSON.stringify(keywords);
    }

    chipsInput.addEventListener('keydown', (event) => {
        if (event.key === 'Enter' && chipsInput.value.trim() !== '') {
            event.preventDefault();

            const newKeyword = chipsInput.value.trim();

            if (chipExists(newKeyword)) {
                chipsInput.value = '';
                return;
            }

            const chip = createChip(newKeyword);
            chipContainer.insertBefore(chip, chipsInput);

            updateKeywordsField();

            chipsInput.value = '';
        }
    });

    const inputPhoto = document.getElementById('photo');
    const previewPhoto = document.getElementById('preview-photo');

    inputPhoto.addEventListener('change', function (event) {
        const file = event.target.files[0];

        if (file) {
            const reader = new FileReader();

            reader.onload = function (e) {
                previewPhoto.innerHTML = `<img src="${e.target.result}" alt="Preview da Foto" class="max-w-full h-auto rounded-md">`;
            };

            reader.readAsDataURL(file);
        }
    });

</script>